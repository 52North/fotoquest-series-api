<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class abstract="true" name="org.n52.series.db.da.beans.FeatureEntity" table="featureofinterest">
        <id name="pkid" type="long">
            <column name="featureofinterestid"/>
            <generator class="assigned"/>
        </id>

        <discriminator column="featureconcept" type="string" />

        <property name="domainId" column="identifier" type="string" insert="false" update="false"/>
        <property name="name" column="name" type="string" />
        <property name="description" column="description" type="string"/>
        <property column="featureconcept" name="featureConcept" type="string" insert="false" update="false" />

        <subclass name="org.n52.series.db.da.beans.ext.SiteFeatureEntity" discriminator-value="stationary/insitu">

        </subclass>
        <subclass name="org.n52.series.db.da.beans.ext.TrackFeatureEntity" discriminator-value="mobile/insitu">

        </subclass>
    </class>
</hibernate-mapping>
