<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.series.db.da.beans.ext.PlatformEntity" table="offering">
        <id name="pkid" type="long">
            <column name="offeringid" />
            <generator class="assigned" />
        </id>
        <property name="domainId" column="identifier" type="string" insert="false" update="false"/>
        <property name="name" column="name" type="string" />

        <set fetch="select" inverse="true" name="series" table="observation">
            <key column="offeringid" />
            <many-to-many class="org.n52.series.db.da.beans.ext.AbstractSeriesEntity"
                          column="seriesid" />
        </set>

    </class>
</hibernate-mapping>
