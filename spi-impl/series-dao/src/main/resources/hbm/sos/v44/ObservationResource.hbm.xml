<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.da.beans.ext">
    <class name="AbstractObservationEntity" table="observation" abstract="true">
        <id name="pkid" type="long">
            <column name="observationid"/>
            <generator class="assigned"/>
        </id>
        <property column="seriesid" name="seriesPkid" type="long"/>
        <property column="phenomenonTimeStart" name="timestamp" type="timestamp"/>
        <property column="deleted" name="deleted" type="org.hibernate.type.TrueFalseType"/>
        <property column="validTimeStart" name="validTimeStart" type="timestamp" not-null="false"/>
        <property column="validTimeEnd" name="validTimeEnd" type="timestamp" not-null="false"/>
        <component class="org.n52.series.db.da.beans.ext.GeometryEntity" name="geometry">
            <!--
            <property column="lat" name="lat" type="double" />
            <property column="lon" name="lon" type="double" />
             -->
            <property column="samplingGeometry" name="geometry" type="org.hibernate.spatial.GeometryType"/>
        </component>
        <!-- Or add only to specific joined-subclasses -->
        <set name="parameters" table="parameters" inverse="true" >
           	<key column="observationid" not-null="true" />
           	<one-to-many class="org.n52.series.db.da.beans.ext.parameter.Parameter" />
       	</set>

        <joined-subclass name="MeasurementEntity"
                         extends="AbstractObservationEntity"
                         table="numericValue">
        	<key column="observationid"/>
         	<property column="value" name="value" type="double" />
        </joined-subclass>

        <joined-subclass name="TextObservationEntity"
                         extends="AbstractObservationEntity"
                         table="textValue">
        	<key column="observationid"/>
         	<property column="value" name="value" type="string" />
        </joined-subclass>

         <joined-subclass name="CountObservationEntity"
                         extends="AbstractObservationEntity"
                         table="countValue">
        	<key column="observationid"/>
         	<property column="value" name="value" type="integer" />
        </joined-subclass>

    </class>
</hibernate-mapping>
