<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.da.beans.ext">
    <class name="AbstractObservationEntity" table="observation">
        <id name="pkid" type="long">
            <column name="observationid"/>
            <generator class="assigned"/>
        </id>
        <!-- only required for hzg, default use joined-subclass(see SOS) -->
        <discriminator formula="'measurement'" type="string"/>
        <property column="seriesid" name="seriesPkid" type="long"/>
        <property column="phenomenontime" name="timestamp" type="timestamp"/>
        <property name="deleted" type="org.hibernate.type.TrueFalseType" formula="'F'" />
        <component class="org.n52.series.db.da.beans.ext.GeometryEntity" name="geometry">
            <property column="lat" name="lat" type="double" />
            <property column="lon" name="lon" type="double" />
            <property column="samplingGeometry" name="geometry" type="org.hibernate.spatial.GeometryType"/>
        </component>
        <subclass name="MeasurementEntity" discriminator-value="measurement" >
        	<property name="value" type="double"/>
<!--             <join fetch="join" table="numericvalue"> -->
<!--                 <key column="observationid" foreign-key="observationid"/> -->
<!--                 <property name="value" type="double"/> -->
<!--             </join> -->
        </subclass>
        <!-- <joined-subclass name="MeasurementEntity"
                         extends="AbstractObservationEntity"
                         table="numericValue">
        	<key column="observationId" foreign-key="observationBlobValueFk" />
         	<property column="value" name="value" type="double" />
        </joined-subclass> -->
    </class>
</hibernate-mapping>
