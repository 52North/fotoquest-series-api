<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.da.beans.v2">
  <class name="ObservationEntityV2" table="observation">
    <id name="pkid" type="long">
      <column name="observationid"/>
      <generator class="assigned"/>
    </id>
    <property column="seriesid" name="seriesPkid" type="long"/>
    <property column="phenomenontimeend" name="timestamp" type="timestamp"/>
    <property column="deleted" name="deleted" type="org.hibernate.type.TrueFalseType"/>
    <property column="samplingGeometry" name="geom" type="org.hibernate.spatial.GeometryType"/>
    <set fetch="select" inverse="false" lazy="true" name="tracks" table="observationHasOffering">
      <key>
        <column name="observationId" not-null="true"/>
      </key>
      <many-to-many entity-name="org.n52.series.db.da.beans.v2.TrackEntity">
        <column name="offeringId" not-null="true"/>
      </many-to-many>
    </set>
    <join fetch="join" table="numericvalue">
      <key column="observationid" foreign-key="observationid"/>
      <property name="value" type="double"/>
    </join>
  </class>
</hibernate-mapping>
