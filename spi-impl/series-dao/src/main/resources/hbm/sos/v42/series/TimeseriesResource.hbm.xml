<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.n52.series.db.da.beans.ext.AbstractSeriesEntity" table="series">
        <id name="pkid" type="long">
            <column name="seriesid"/>
            <generator class="assigned"/>
        </id>

        <discriminator formula="'measurement'" type="string"/>

        <many-to-one class="org.n52.series.db.da.beans.CategoryEntity" column="observablepropertyid" name="category" insert="false" update="false" />
        <many-to-one class="org.n52.series.db.da.beans.ProcedureEntity" column="procedureid" name="procedure" insert="false" update="false" />
        <many-to-one class="org.n52.series.db.da.beans.PhenomenonEntity" column="observablepropertyid" name="phenomenon" insert="false" update="false" />
        <many-to-one class="org.n52.series.db.da.beans.FeatureEntity" column="featureofinterestid" name="feature" insert="false" update="false" />
        <many-to-one class="org.n52.series.db.da.beans.ext.PlatformEntity" column="procedureid" name="platform"/>

        <subclass name="org.n52.series.db.da.beans.ext.MeasurementSeriesEntity" discriminator-value="measurement">

            <property formula="3" name="numberOfDecimals" type="int"/>
            <property column="published" name="published" type="org.hibernate.type.TrueFalseType"/>

            <many-to-one class="org.n52.series.db.da.beans.UnitEntity" column="seriesid" name="unit" insert="false" update="false" />
            <component class="org.n52.series.db.da.beans.ext.MeasurementEntity" name="firstValue">
                <property column="firsttimestamp" name="timestamp" type="timestamp"/>
                <property column="firstnumericvalue" name="value" type="double"/>
            </component>
            <component class="org.n52.series.db.da.beans.ext.MeasurementEntity" name="lastValue">
                <property column="lasttimestamp" name="timestamp" type="timestamp"/>
                <property column="lastnumericvalue" name="value" type="double"/>
            </component>
            <list fetch="select" inverse="true" name="observations" table="observation">
                <key column="observationid"/>
                <index column="seriesid"/>
                <one-to-many class="org.n52.series.db.da.beans.ext.MeasurementEntity"/>
            </list>
        </subclass>


