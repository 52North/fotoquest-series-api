<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.n52.series.db.beans">
    <class name="DataParameterText" table="observation">
        <id name="parameterId" type="long">
            <column name="parameterid"/>
            <generator class="assigned"/>
        </id>

        <property name="observationId" column="observationid" type="long" not-null="true" />
        <property name="name" formula="'direction'" type="string" not-null="true" />
        <property column="direction" name="value" type="string"/>
        
    </class>
</hibernate-mapping>
