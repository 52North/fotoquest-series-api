<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:ctx="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <mvc:annotation-driven />
    <ctx:annotation-config />

    <bean name="extCategoryRepository" class="org.n52.series.db.da.v1.ext.ExtCategoryRepository">
        <property name="categoryRepository">
            <bean class="org.n52.series.db.da.v1.CategoryRepository" />
        </property>
    </bean>
    <bean name="extFeatureRepository" class="org.n52.series.db.da.v1.ext.ExtFeatureRepository">
        <property name="featureRepository">
            <bean class="org.n52.series.db.da.v1.FeatureRepository" />
        </property>
    </bean>
    <bean name="extPhenomenonRepository" class="org.n52.series.db.da.v1.ext.ExtPhenomenonRepository">
        <property name="phenomenonRepository">
            <bean class="org.n52.series.db.da.v1.PhenomenonRepository" />
        </property>
    </bean>
    <bean name="extProcedureRepository" class="org.n52.series.db.da.v1.ext.ExtProcedureRepository">
        <property name="procedureRepository">
            <bean class="org.n52.series.db.da.v1.ProcedureRepository" />
        </property>
    </bean>
    <bean name="extPlatformRepository" class="org.n52.series.db.da.v1.ext.PlatformRepository">
        <property name="platformRepository">
            <bean class="org.n52.series.db.da.v1.PlatformRepository" />
        </property>
    </bean>
    <bean name="extSeriesRepository" class="org.n52.series.db.da.v1.ext.SeriesRepository">
        <property name="seriesRepository">
            <bean class="org.n52.series.db.da.v1.SeriesRepository" />
        </property>
    </bean>

    <bean id="extSearchService" class="org.n52.series.db.srv.v1.Search" />
    <bean id="extServiceParameterService" class="org.n52.series.db.srv.v1.ext.ServiceAccessService" />
    <bean id="extSeriesService" class="org.n52.series.db.srv.v1.ext.SeriesAccessService" />
    <bean id="extMetadataService" class="org.n52.series.db.srv.v1.ext.ExtMetadataAccessService" />

    <bean id="offeringParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="extOfferingRepository" />
    </bean>
    <bean id="categoryParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="extCategoryRepository" />
    </bean>
    <bean id="featureParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="extFeatureRepository" />
    </bean>
    <bean id="procedureParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="extProcedureRepository" />
    </bean>
    <bean id="phenomenonParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="extPhenomenonRepository" />
    </bean>
    <bean id="extPlatformParameterService" class="org.n52.series.db.srv.v1.AccessService">
        <constructor-arg index="0" ref="extPlatformRepository" />
    </bean>
</beans>
