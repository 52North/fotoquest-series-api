<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:ctx="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <mvc:annotation-driven />
    <ctx:annotation-config />
    
    <bean class="org.n52.series.db.da.v2.CategoryRepository" />
    <bean class="org.n52.series.db.da.v2.FeatureRepository" />
    <bean class="org.n52.series.db.da.v2.PhenomenonRepository" />
    <bean class="org.n52.series.db.da.v2.PlatformRepository" />
    <bean class="org.n52.series.db.da.v2.ProcedureRepository" />
    <bean class="org.n52.series.db.da.v2.SeriesRepository" />
    <bean class="org.n52.series.db.da.v2.ServiceRepository" />
    
    <!-- inject implementation of the Timeseries API's SPI version 2 -->

    <bean id="searchServiceV2" class="org.n52.series.db.srv.v2.Search" />
    <bean id="serviceParameterServiceV2" class="org.n52.series.db.srv.v2.ServiceAccessService" />
    <bean id="categoryParameterServiceV2" class="org.n52.series.db.srv.v2.CategoriesAccessService" />
    <bean id="featureParameterServiceV2" class="org.n52.series.db.srv.v2.FeaturesAccessService" >
       <constructor-arg name="dbSrid" value="EPSG:4326" />
    </bean>
    <bean id="procedureParameterServiceV2" class="org.n52.series.db.srv.v2.ProceduresAccessService" />
    <bean id="platformParameterServiceV2" class="org.n52.series.db.srv.v2.PlatformsAccessService" />
    <bean id="phenomenonParameterServiceV2" class="org.n52.series.db.srv.v2.PhenomenaAccessService"  />
    <bean id="seriesServiceV2" class="org.n52.series.db.srv.v2.SeriesAccessService" />
    <bean id="metadataServiceV2" class="org.n52.series.db.srv.v2.MetadataAccessService" />

</beans>