<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:ctx="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <bean id="propertyPlaceholderConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:application.properties</value>
            </list>
        </property>
    </bean>

    <import resource="spi-impl-dao_common.xml"/>

    <!-- timeseries api web controller bindings -->
    <import resource="spi-impl-dao_v1_beans.xml"/>
    <import resource="spi-impl-dao_v2_beans.xml"/>
    <ctx:component-scan base-package="org.n52.series.db">
        <!-- exclude V2 beans from autowiring -->
        <ctx:exclude-filter type="regex" expression="org\.n52\.series\.db\.*\.v2\.*" />
    </ctx:component-scan>

    <import resource="api_web_v1.xml"/>
    <import resource="api_web_v2.xml"/>
    <!--<import resource="api_web_v2.xml"/>-->

    <!--<import resource="spi-impl-dao_tasks.xml" />-->

    <import resource="series-database-config.xml" />

</beans>
